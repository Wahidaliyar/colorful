extends dashbase

block content
    section(class="w-[85%] mr-[15%] py-24 px-16")
        div(class="w-[85%] md:w-[75%] mx-auto bg-white p-4 rounded-sm shadow-[1px_2px_4px_0_rgba(0,0,0,0.2)]")
            div(class="flex flex-col md:flex-row")
                div(class="w-full md:w-44 md:h-44 mt-1 mr-1")
                    img(class="rounded-sm w-full object-cover h-full" src=`/imgs/artist/${artist.image}` alt="")

                div(class="font-IRanSans mt-2 md:mt-0 flex flex-col justify-end items-start pr-4")
                    p(class="text-xl mr-2 font-bold text-red")= artist.name
                    div(class="text-3xl mt-1 md:mt-3 text-slate-700")
                        a(class="mr-1 md:mx-2" href=`${artist.instagramLink}`)
                            i(class="fa-brands fa-instagram transition-all duration-300 hover:text-red")
                        a(class="mx-1 md:mx-2" href=`${artist.facebookLink}`)
                            i(class="fa-brands fa-facebook-f transition-all duration-300 hover:text-red")
                        a(class="mx-1 md:mx-2" href=`${artist.email}`)
                            i(class="fa-regular fa-envelope transition-all duration-300 hover:text-red")
                        a(class="ml-1 md:mx-2" href=`${artist.whatsappLink}`) 
                            i(class="fa-brands fa-whatsapp transition-all duration-300 hover:text-red")

            div
                h3(class="inline-block text-xl md:text-2xl font-mehr border-b-2 border-red mt-1 md:mt-3 mx-2") بیوگرافی
                p(class="text-justify font-IRanSans mt-3 leading-7 text-sm px-2 md:px-4")= artist.bio
            div(class="mt-6")
                a(href=`/dashboard/artists/update/${artist._id}` class="bg-slate-700 text-white font-IRanSans inline-block text-center w-32 py-2 ml-2 rounded-sm") ویرایش
                button(id="artist-delete-btn" class="bg-red text-white font-IRanSans w-32 py-2 rounded-sm") حذف

    div(id="delete-artist-popup" style="z-index: 300;" class="hidden fixed left-0 top-0 bottom-0 right-0 flex justify-center items-center font-IRanSans bg-slate-600 bg-opacity-60 backdrop backdrop-blur-sm")
        div(class="relative bg-white rounded-sm flex p-6 px-8 shadow-[1px_2px_10px_-2px_rgba(0,0,0,0.5)]")
            i(id="delete-artist-popup-close" class="fa-solid fa-xmark absolute text-xl top-1.5 right-2 cursor-pointer")
            div(class="mt-3")
                div(class="flex justify-center items-center")
                    i(class="fa-solid fa-triangle-exclamation text-3xl ml-3")
                    p مطمئن‌اید که حذف شود؟

                div(class="mt-8")
                    button(id="delete-artist-yes" data-id=`${artist._id}` class="bg-red ml-2 text-white w-[48%] py-2 rounded-sm cursor-pointer text-sm") بله!
                    button(id="delete-artist-no" class="bg-slate-700 text-white w-[48%] py-2 rounded-sm cursor-pointer text-sm") لغو
