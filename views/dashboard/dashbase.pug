doctype html
html
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="/css/output.css")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer")
        link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.4/axios.min.js")
        title= title
    body(class="bg-bg min-h-[100vh]")

    //- SIDEBAR
    include dashSidebar 

    //- DETAILS
    block content


    div(id="logoutPopup" class="hidden absolute top-0 bottom-0 left-0 right-0 bg-slate-600 bg-opacity-70 flex justify-center items-center")
        div(class="bg-bg font-IRanSans py-6 px-8 rounded-md relative")
            i(id="closeLogoutPopup"
            class="fa-solid fa-xmark text-xl text-slate-800 cursor-pointer absolute top-2 right-3")
            div(class="flex flex-col items-center")
                i(class="fa-solid fa-triangle-exclamation text-4xl mb-2 text-slate-800")
                p(class=" text-slate-800") میخواهید از حساب خود خارج شوید؟
            div(class="flex justify-end mt-6") 
                button(class="bg-red border-2 border-red text-white px-8 py-1 rounded-sm") بله!
                button(class="border-2 border-red text-slate-800 px-8 py-1 rounded-sm mr-4") لغو
    
    script(src="/js/login.js" type="module")
    script(src="/js/search.js")
    script(src="/js/updateMe.js" type="module")
    if active === 'products'
        script(src="/js/adminShowSingleProduct.js") 
        script(src="/js/addArtwork.js" type="module")
        script(src="/js/deleteArtwork.js" type="module")
        script(src="/js/updateArtwork.js" type="module")
    if active === 'artists'
        script(src="/js/addArtist.js" type="module")
        script(src="/js/deleteArtist.js" type="module")
        script(src="/js/updateArtist.js" type="module")
    if active === 'users'
        script(src="/js/deleteUser.js" type="module") 
    if active === 'orders'
        script(src="/js/deleteOrder.js" type="module") 
