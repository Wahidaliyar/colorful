extends base

block content
    section(class="pt-28 px-4")
        div(class="flex flex-col md:flex-row-reverse md:w-[50%] md:justify-between md:mx-auto")
            img(src=`/imgs/artwork/${artwork.image}` alt=`${artwork.name}` class="w-full border-2 border-redShade rounded-sm md:w-80")
          
            div(class="flex gap-4 font-IRanSans text-lg mt-6")
                div
                    p نام:
                    p(class="mt-1") تکنیک:
                    p(class="mt-1") هنرمند:
                    p(class="mt-1") جنس ورق:
                    p(class="mt-1") ابعاد تابلو:
                    p(class="mt-1") قیمت:
                div(class="font-IRanSans")
                    p(class="font-bold")= artwork.name
                    p(class="mt-1")= artwork.category
                    p(class="mt-1") محمد رضا قاسمی
                    p(class="mt-1")= artwork.paperMaterial
                    p(class="mt-1")= `${artwork.width} ✕ ${artwork.height} سانتی متر`
                    p(class="text-red mt-1")= `${artwork.price} افغانی`

        div(class="mt-6 md:w-[75%] md:mx-auto")
            div(class="mt-6 bg-bgShade px-2 md:px-8 pt-2 pb-4 rounded-md")
                h3(class="inline-block text-2xl md:text-3xl font-mehr border-b-2 border-redColor") نظرات
                hr(class="border-1 border-slate-400 mt-2 md:mt-3")

                div(class="mt-2")
                    div(class="py-2 border-b border-slate-400")
                        div(class="flex items-center gap-4 text-lg")
                            img(src="/imgs/profile.png" alt="" class="w-10 md:w-14 rounded-full")
                            p(class="font-IRanSans text-sm md:text-base font-semibold") محمد رضا قاسمی
                        p(class="text-justify font-IRanSans text-sm md:text-base mt-1 pr-4 md:pr-16") .نقاشی قفل و زنجیر که از قدیم به عنوان دو همراه همیشگی و به عنوان نماد های مختلف به کار رفته اند

                    div(class="py-2 border-b border-slate-400")
                        div(class="flex items-center gap-4 text-lg") 
                            img(src="/imgs/profile.png" alt="" class="w-10 md:w-14 rounded-full")
                            p(class="font-IRanSans md:text-base font-semibold text-sm") محمد رضا قاسمی
                        p(class="text-justify font-IRanSans text-sm md:text-base mt-1 pr-4 md:pr-16") .نقاشی قفل و زنجیر که از قدیم به عنوان دو همراه همیشگی و به عنوان نماد های مختلف به کار رفته اند

                    form(class="flex flex-col")
                        textarea(name="comment" id="comment" cols="30" rows="5" placeholder="نظر شما" class="w-full font-IRanSans text-sm md:text-base bg-bg px-2 pt-1 pb-[6px] outline-none rounded-sm md:w-[50%] mt-4")
                        button(class="font-IRanSans self-end md:self-start  text-white mt-2 py-1 md:py-2 px-6 md:px-8 bg-red rounded-sm") ثبت نظر

            div(class="mt-10")
                h3(class="inline-block text-2xl font-mehr border-b-2 border-redColor md:text-3xl") توضیحات
                p(class="mt-3 font-IRanSans text-sm leading-7 text-justify md:text-base md:leading-8")= artwork.description
